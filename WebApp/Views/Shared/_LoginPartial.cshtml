@inject System.Security.Claims.IClaimPrincipalManager claimManager

@{
  @if (claimManager.IsAuthenticated)
  {
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
      <ul class="nav navbar-nav navbar-right">
        <li>
          <a> @claimManager.UserName</a>
        </li>
        <li>
          <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out &nbsp;</button>
        </li>
      </ul>
    </form>
  }
  else
  {
    <ul class="nav navbar-nav navbar-right">
      <li><a asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
    </ul>
  }
}