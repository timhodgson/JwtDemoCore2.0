@model  Models.EmployeeModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<form id="frmcrud" asp-controller="Employee" asp-action="Edit" method="post" class="form-horizontal">
  @Html.AntiForgeryToken()
  <input asp-for=RowVersion type="hidden" />
  <input asp-for=Id type="hidden" />
  <div asp-validation-summary="ModelOnly" class="text-danger"></div>
  <div class="modal-body">

    <div class="form-group">
      <label asp-for=FirstName class="control-label col-md-3"></label>
      <div class="col-md-9">
        <input asp-for=FirstName class="form-control input-md" type="text" />
        <span asp-validation-for=FirstName class="text-danger"></span>
      </div>
    </div>

    <div class="form-group">
      <label asp-for=LastName class="control-label col-md-3"></label>
      <div class="col-md-9">
        <input asp-for=LastName class="form-control" />
        <span asp-validation-for=LastName class="text-danger"></span>
      </div>
    </div>

    <div class="form-group">
      <label asp-for=Gender class="control-label col-md-3"></label>
      <div class="col-md-9">
        <input asp-for=Gender class="form-control" />
        <span asp-validation-for=Gender class="text-danger"></span>
      </div>
    </div>

    <div class="form-group">
      <label asp-for=Email class="control-label col-md-3"></label>
      <div class="col-md-9">
        <input asp-for=Email class="form-control" />
        <span asp-validation-for=Email class="text-danger"></span>
      </div>
    </div>

    <div class="form-group">
      <label asp-for=Salary class="control-label col-md-3"></label>
      <div class="col-md-9">
        <input asp-for=Salary class="form-control" />
        <span asp-validation-for=Salary class="text-danger"></span>
      </div>
    </div>

  </div>
</form>

